<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="self_pop_car_source_title_ani">
	    <item name="android:windowEnterAnimation">@anim/self_pop_car_source_title_fad_in</item>
	    <item name="android:windowExitAnimation">@anim/self_pop_car_source_title_fad_out</item>
	</style>

    <style name="layout_click">
        <item name="android:background">@drawable/layout_click</item>
    </style>
    
    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
        <style name="PopAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
              <!-- 超大文本深色字体大小 -->
    <style name="xlarge_dark_grey_text_size">
        <item name="android:textSize">@dimen/jzg_title_size</item>
         <item name="android:textColor">@color/dark_grey_text</item>
    </style>
</resources>
